<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= current_user.name + "'s tasks"%></h3>
  </div>
  <div class="panel-body">
    <p>Your pending tasks are below. Tasks expire automatically if not completed within <strong>7</strong> days!</p> <%= Time.now %>
  </div>
  <table class="table">
    <tr>
      <th class="col-md-1">#</th>
      <th>Task</th>
      <th>Expiration</th>
    </tr>
    <%@tasks.each do |task| %>
      <tr>
        <td>x</td>
        <td><%= task.description %></td>
        <td>Expires in <%= distance_of_time_in_words_to_now(task.expires_at) %></td>
      </tr>
    <% end %>

  </table>
  <div class="panel-footer">
    <%= link_to "Add task", new_task_path, class: 'btn btn-primary' %>
  </div>
</div>